<project name="indexCreator" default="jar">
    <target name="clean">
        <delete dir="classes"/>
        <delete file="indexCreator.jar"/>
    </target>

    <target name="jar" depends="clean">
        <mkdir dir="classes"/>
        <javac srcdir="src" destdir="classes" debug="yes"/>
        <jar jarfile="indexCreator.jar" basedir="classes"/>
    </target>
</project>